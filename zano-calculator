#include <iostream>

using namespace std;

int main() 
{
    int n1, n2;
    char operation;

    cout<<"Enter 1st Number: ";
    cin>>n1;
   
    cout<<"Enter 2nd Number: ";
    cin>>n2;

    cout<<"Enter Operation (+, -, *, /): ";
    cin>>operation;
    switch(operation){
        case '+':
            cout<< n1 + n2;
        break;
        case '-':
            cout<<  n1 - n2;
        break;
        case '*':
            cout<<  n1 * n2;
        break;
        case '/':
            cout<< n1 / n2;
        break;
        default:
            cout<<"Invalid Operation";
    }

    return 0;
}
